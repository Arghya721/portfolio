extends base.pug

block scripts 
    //- script(src="/static/index.js")

block style 
    style 
        include ../static/style.css
        include ../static/stylecontact.css

block content
    main#main
        section#contact.contact
            div.container(data-aos="fade-up")
                div.section-title.d-flex.flex-column.justify-content-center.align-items-center
                    h2 Contact
                    div.container
                        p Here is the contact form . Feel free to contact me if you need my services in IoT or web development or anything as you like . 
                div 
                    iframe(style='border:0; width: 100%; height: 270px;' src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d119743.40927405212!2d85.75041319959854!3d20.30103122293105!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3a1909d2d5170aa5%3A0xfc580e2b68b33fa8!2sBhubaneswar%2C%20Odisha!5e0!3m2!1sen!2sin!4v1621972194069!5m2!1sen!2sin' frameborder='0' allowfullscreen='')
                div.row.mt-5
                    div.col-lg-4
                        div.info
                            div.address
                                i.bi.bi-geo-alt
                                h4 Location:
                                p Bhubaneswar,India 
                            div.email
                                i.bi.bi-envelope
                                h4 Email: 
                                p imarghyadeep@gmail.com
                            div.phone 
                                i.bi.bi-phone
                                h4 Call: 
                                p +91 9064 4709 46
                    div.col-lg-8.mt-5.mt-lg-0 
                        form(action="/contact",method="post", class="myForm")
                            div.row
                                div.col-md-6.form-group 
                                    input#name.form-control(type='text' name='name' placeholder='Your Name' required='')
                                div.col-md-6.form-group.mt-3.mt-md-0
                                    input#email.form-control(type='email' name='email' placeholder='Your Email' required='')
                            div.form-group.mt-3
                                input#subject.form-control(type='text' name='subject' placeholder='Subject' required='')
                            div.form-group.mt-3
                                textarea.form-control(name='message' rows='5' placeholder='Message' required='')
                            div.my-3
                                div.loading Loading 
                                div.error-message 
                            div.text-center 
                                button(type='submit') Send Message
                            







                        


